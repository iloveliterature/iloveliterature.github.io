---
---
[
  {% for post in site.posts %}
    {
      "title"      : "{{ post.title | escape }}",
      "url"        : "{{ post.url }}",
      "date"       : "{{ page.date | date: '%Y-%m-%d' }}", 
      "shortdate"  : "{{ page.date | date: '%B %d, %Y' }}",
      "author"     : "{{ post.author | escape }}"
    } {% if forloop.last %}{% else %},{% endif %}
  {% endfor %}
]
